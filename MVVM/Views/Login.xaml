<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CaTALK.MVVM.Views.Login"
             xmlns:local="CaTalk.MVVM.ViewModels"
             Title="Login">
    <!--#region Setters -->
    <ContentPage.Resources>
        <!-- Setter for local use -->
        <Style x:Key="InputFrame" TargetType="Frame">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BackgroundColor" Value="White"/>
            <Setter Property="HasShadow" Value="True"/>
            <Setter Property="BorderColor" Value="#E0E0E0"/>
        </Style>
        <Style x:Key="InputEntry" TargetType="Entry">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="TextColor" Value="#333333"/>
            <Setter Property="PlaceholderColor" Value="#fafafa"/>
        </Style>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#1A2151"/>
            <Setter Property="TextColor" Value="#FFFFFF"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="HeightRequest" Value="60"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="CharacterSpacing" Value="2"/>
            <Setter Property="FontSize" Value="28"/>
        </Style>
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="TextColor" Value="#3B82F6"/>
            <Setter Property="BorderColor" Value="#3B82F6"/>
            <Setter Property="BorderWidth" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="HeightRequest" Value="50"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </ContentPage.Resources>
    <!--#endregion-->

    <ScrollView>
        <VerticalStackLayout>
            <Entry Placeholder="Username" Text="{Binding Username}" Style="{StaticResource InputEntry}"/>
            <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="{Binding IsPassword}" 
                                   Style="{StaticResource InputEntry}"/>
            <Button Command="{Binding Login}" Text = "Login"/>
        </VerticalStackLayout>

    </ScrollView>
</ContentPage>